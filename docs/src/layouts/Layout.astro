---
import Menu from '../components/Menu.astro'
const {
	frontmatter: { description, title },
} = Astro.props
---

<!doctype html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content='Astro description' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
		<meta name='description' content={description} />
	</head>
	<body>
		<Menu />
		<main>
			<slot />
		</main>
	</body>
</html>

<style is:global>
	html {
		scroll-padding-top: 6.5rem;
	}

	.header {
		width: 100%;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}

	.header h1 {
		font-size: 5rem;
		font-weight: 600;
	}

	.header p {
		color: #7c7c7c;
		font-size: 1.15rem;
	}

	.section {
		display: grid;
		place-items: center;
		padding: 6rem 1rem;
		border-top: #ececec solid 0.1rem;
	}

	.section h2 {
		font-size: 1.75rem;
		font-weight: 600;
	}

	.section h3 {
		font-size: 1.25rem;
		font-weight: 600;
	}

	.section h4 {
		font-size: 1.15rem;
		font-weight: 600;
	}

	.section--dark {
		background-color: #fbfbfb;
	}

	.section p code {
		font-size: 0.85rem;
		background-color: #e8e8e8;
		border-radius: 0.25rem;
		padding: 0.25rem 0.5rem;
	}

	.section div {
		width: 100%;
		max-width: 40rem;
		display: flex;
		flex-direction: column;
		gap: 1.25rem;
	}

	.section pre {
		padding: 1rem;
		border-radius: 0.25rem;
	}

	.section a {
		color: #fd8923;
	}
</style>
